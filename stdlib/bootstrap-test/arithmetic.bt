// E2E tests for arithmetic operations - bootstrap primitives only
// Each expression is followed by its expected result

// Basic addition
3 + 4
// => 7

// Basic subtraction
10 - 3
// => 7

// Basic multiplication
5 * 6
// => 30

// Unary negated
5 negated
// => -5

// ===========================================================================
// DIVISION
// ===========================================================================

// Float division
20 / 4
// => 5.0

// Float division with remainder
7 / 2
// => 3.5

// Integer division (truncating toward zero)
10 div: 3
// => 3

// Integer division (exact)
42 div: 7
// => 6

// Integer division (negative, truncates toward zero)
-7 div: 2
// => -3

// Integer division (negative divisor)
7 div: -2
// => -3

// Multiple operations (left to right precedence for same operator)
2 + 3 + 4
// => 9

// Standard math precedence: multiplication before addition
2 + 3 * 4
// => 14

// Standard math precedence: addition then multiplication
3 * 4 + 2
// => 14

// Negative numbers
0 - 5
// => -5

// Zero operations
0 + 0
// => 0

// Large numbers
1000000 + 1
// => 1000001

// ===========================================================================
// COMPLEX EXPRESSIONS
// ===========================================================================

// Multiple operations with precedence
2 + 3 * 4 - 5
// => 9

// Division and multiplication
10 / 2 * 3
// => 15.0

// Nested parentheses (via precedence)
5 + 3 * 2 - 1
// => 10

// ===========================================================================
// EDGE CASES
// ===========================================================================

// Negative result
5 - 10
// => -5

// Negative operands
-5 + 10
// => 5

// Double negative
0 - -5
// => 5

// Zero division operand (numerator)
0 / 5
// => 0.0

// Very large multiplication
1000 * 1000
// => 1000000

// Fractional division
1 / 3
// => 0.3333333333333333

// Division producing whole number float
10 / 2
// => 5.0
