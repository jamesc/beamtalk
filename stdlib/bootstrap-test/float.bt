// E2E tests for Float class and Number hierarchy - bootstrap primitives only

// ===========================================================================
// FLOAT LITERALS
// ===========================================================================

// Basic float literal
3.14
// => 3.14

// Float class identity
3.14 class
// => Float

// Negative float
-2.5
// => -2.5

// ===========================================================================
// FLOAT ARITHMETIC
// ===========================================================================

// Float addition
1.5 + 2.5
// => 4.0

// Float subtraction
5.5 - 2.3
// => 3.2

// Float multiplication
2.5 * 4.0
// => 10.0

// Float division
10.0 / 3.0
// => 3.3333333333333335

// ===========================================================================
// MIXED ARITHMETIC (Integer + Float)
// ===========================================================================

// Integer + Float
3 + 2.5
// => 5.5

// Float + Integer
2.5 + 3
// => 5.5

// Integer * Float
3 * 2.5
// => 7.5

// Integer / Integer (always returns float)
10 / 3
// => 3.3333333333333335

// ===========================================================================
// FLOAT COMPARISON
// ===========================================================================

// Float equality
3.14 =:= 3.14
// => true

// Float equality (false case)
3.14 =:= 2.71
// => false

// Float less than
2.5 < 3.5
// => true

// Float greater than
3.5 > 2.5
// => true
