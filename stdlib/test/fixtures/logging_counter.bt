// LoggingCounter - demonstrates super keyword for method dispatch
// This fixture tests super calls in inheritance hierarchy:
//   Actor -> Counter -> LoggingCounter

Counter subclass: LoggingCounter
  state: logCount = 0

  // Override increment to add logging, then call super
  increment =>
    self.logCount := self.logCount + 1
    super increment

  // New method to get log count
  getLogCount => self.logCount

  // Override getValue to test super with different method
  getValue => super getValue
