// BT-761: ActorNlrMutate â€” NLR after field mutation preserves updated state

Actor subclass: ActorNlrMutate
  state: count = 0

  incAndCheck: n =>
    self.count := self.count + 1
    self.count >= n ifTrue: [^self.count]
    "not yet"
