// BT-898: Fixture actor for actor-to-actor coordination tests.
// EventCollector receives events forwarded by EventBus.

Actor subclass: EventCollector
  state: events = #()

  receive: event =>
    self.events := self.events ++ #(event)

  events => self.events

  eventCount => self.events size
