// SelfRefActor - Actor fixture for testing self-reference behavior
// Used by tests/e2e/cases/self_reference.bt

Actor subclass: SelfRefActor
  state: value = 0

  // Returns self (the actor's object reference)
  returnSelf => self

  // Returns self's class from inside a block
  classInBlock => [self class] value

  // Keyword message setter
  setValue: v => self.value := v

  getValue => self.value
