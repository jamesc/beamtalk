// BUnit tests for BeamtalkInterface facade API (BT-849 / ADR 0040 Phase 6)
//
// Tests use class-level introspection (includesSelector:, inheritsFrom:) since
// the Beamtalk workspace singleton is not available in the BUnit test context
// (workspace_mode: false). Live functionality tests are in E2E:
// tests/e2e/cases/workspace_native_api.bt
//
// Covers: version, allClasses, classNamed:, globals, help:, help:selector:

TestCase subclass: BeamtalkInterfaceTest

  testIncludesSelectorVersion =>
    self assert: (BeamtalkInterface includesSelector: #version)

  testIncludesSelectorAllClasses =>
    self assert: (BeamtalkInterface includesSelector: #allClasses)

  testIncludesSelectorClassNamed =>
    self assert: (BeamtalkInterface includesSelector: #classNamed:)

  testIncludesSelectorGlobals =>
    self assert: (BeamtalkInterface includesSelector: #globals)

  testIncludesSelectorHelp =>
    self assert: (BeamtalkInterface includesSelector: #help:)

  testIncludesSelectorHelpSelector =>
    self assert: (BeamtalkInterface includesSelector: #help:selector:)

  testInheritsFromActor =>
    self assert: (BeamtalkInterface inheritsFrom: Actor)
