{
  "$schema": "https://linear.app/schema/config.json",
  "team": "Beamtalk",
  "issuePrefix": "BT",
  "labels": {
    "agentState": [
      "agent-ready",
      "needs-spec",
      "blocked",
      "human-review",
      "done"
    ],
    "issueType": [
      "Feature",
      "Bug",
      "Improvement",
      "Documentation",
      "Infra",
      "Language Feature",
      "Refactor",
      "Research",
      "Samples"
    ],
    "itemSize": [
      "S",
      "M",
      "L",
      "XM"
    ]
  },
  "customFields": {
    "filesToModify": {
      "type": "text",
      "description": "File paths this issue will touch"
    },
    "acceptanceCriteria": {
      "type": "text",
      "description": "Checkboxes for completion"
    }
  },
  "gitBranchFormat": "{{issueIdentifier}}-{{issueTitleSlug}}",
  "gitCommitFormat": "{{issueTitle}} {{issueIdentifier}}"
}
