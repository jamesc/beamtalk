// True - The true boolean value
//
// Implements control flow messages for the true case. All methods are
// pure Beamtalk â€” no primitives needed.

Object subclass: True
  ifTrue: trueBlock ifFalse: falseBlock => trueBlock value
  ifTrue: trueBlock => trueBlock value
  ifFalse: falseBlock => self
  and: aBlock => aBlock value
  or: aBlock => self
  not => false
  isTrue => true
  isFalse => false
  describe => 'true'
