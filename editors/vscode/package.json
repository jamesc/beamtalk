{
  "name": "beamtalk",
  "displayName": "Beamtalk",
  "description": "Language support for Beamtalk (.bt files)",
  "version": "0.1.0",
  "publisher": "beamtalk",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesc/beamtalk"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beamtalk.restartServer",
        "title": "Beamtalk: Restart Language Server"
      }
    ],
    "languages": [
      {
        "id": "beamtalk",
        "aliases": [
          "Beamtalk",
          "beamtalk"
        ],
        "extensions": [
          ".bt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "beamtalk",
        "scopeName": "source.beamtalk",
        "path": "./syntaxes/beamtalk.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Beamtalk",
      "properties": {
        "beamtalk.server.path": {
          "type": "string",
          "default": "",
          "description": "Override path to the beamtalk-lsp binary. Leave empty to use the bundled server."
        },
        "beamtalk.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace communication between VS Code and the Beamtalk language server."
        },
        "beamtalk.stdlib.sourceDir": {
          "type": "string",
          "default": "",
          "description": "Optional path to stdlib .bt sources for navigation fallback. Can be absolute, or relative to the Beamtalk project root (directory containing beamtalk.toml)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.82.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.0.0"
  }
}
