{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Beamtalk",
  "scopeName": "source.beamtalk",
  "fileTypes": ["bt"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#symbols" },
    { "include": "#characters" },
    { "include": "#pragmas" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#class-definition" },
    { "include": "#method-definition" },
    { "include": "#constants" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.beamtalk",
          "match": "//.*$"
        },
        {
          "name": "comment.block.beamtalk",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.beamtalk",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.beamtalk",
              "match": "\\\\[nrtf0\\\\\"{}]"
            },
            {
              "name": "meta.interpolation.beamtalk",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.beamtalk" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.beamtalk" }
              },
              "patterns": [
                { "include": "source.beamtalk" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.radix.beamtalk",
          "match": "\\b\\d+r[0-9A-Fa-f]+\\b"
        },
        {
          "name": "constant.numeric.float.beamtalk",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.beamtalk",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "symbols": {
      "patterns": [
        {
          "name": "constant.other.symbol.quoted.beamtalk",
          "match": "#'[^']*'"
        },
        {
          "name": "constant.other.symbol.beamtalk",
          "match": "#[a-zA-Z_][a-zA-Z0-9_:]*"
        }
      ]
    },
    "characters": {
      "patterns": [
        {
          "name": "constant.character.beamtalk",
          "match": "\\$\\\\?."
        }
      ]
    },
    "pragmas": {
      "patterns": [
        {
          "name": "keyword.other.pragma.beamtalk",
          "match": "@(primitive|intrinsic)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "variable.language.self.beamtalk",
          "match": "\\bself\\b"
        },
        {
          "name": "variable.language.super.beamtalk",
          "match": "\\bsuper\\b"
        },
        {
          "name": "constant.language.nil.beamtalk",
          "match": "\\bnil\\b"
        },
        {
          "name": "constant.language.boolean.beamtalk",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "keyword.other.sealed.beamtalk",
          "match": "\\bsealed\\b"
        },
        {
          "name": "keyword.other.abstract.beamtalk",
          "match": "\\babstract\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.beamtalk",
          "match": ":="
        },
        {
          "name": "keyword.operator.return.beamtalk",
          "match": "\\^"
        },
        {
          "name": "keyword.operator.arrow.beamtalk",
          "match": "=>"
        },
        {
          "name": "keyword.operator.comparison.beamtalk",
          "match": "=:=|=/=|==|/=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.beamtalk",
          "match": "\\*\\*|\\+\\+|[+\\-*/%]"
        },
        {
          "name": "punctuation.separator.cascade.beamtalk",
          "match": ";"
        }
      ]
    },
    "class-definition": {
      "patterns": [
        {
          "match": "\\b(Object|Actor)\\s+(subclass:)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.other.inherited-class.beamtalk" },
            "2": { "name": "keyword.other.subclass.beamtalk" },
            "3": { "name": "entity.name.type.class.beamtalk" }
          }
        },
        {
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\s+(subclass:)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.other.inherited-class.beamtalk" },
            "2": { "name": "keyword.other.subclass.beamtalk" },
            "3": { "name": "entity.name.type.class.beamtalk" }
          }
        },
        {
          "match": "\\b(state:)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.state.beamtalk" },
            "2": { "name": "variable.other.field.beamtalk" }
          }
        }
      ]
    },
    "method-definition": {
      "patterns": [
        {
          "match": "\\b(class)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=>)",
          "captures": {
            "1": { "name": "storage.modifier.class.beamtalk" },
            "2": { "name": "entity.name.function.beamtalk" },
            "3": { "name": "keyword.operator.arrow.beamtalk" }
          }
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "entity.name.type.class.beamtalk",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.keyword-message.beamtalk",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*:"
        },
        {
          "name": "variable.other.beamtalk",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
