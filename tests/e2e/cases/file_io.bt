// ===========================================================================
// EMPTY FILE
// ===========================================================================

// Write empty file
File writeAll: 'empty.txt' contents: ''
// => nil

// Read empty file
File readAll: 'empty.txt'
// => ""

// Empty file exists
File exists: 'empty.txt'
// => true
