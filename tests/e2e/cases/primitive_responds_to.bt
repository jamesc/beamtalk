// Test respondsTo: for all primitive types (BT-277)

// Test Integer respondsTo:
42 respondsTo: #'+'
// => true

42 respondsTo: #foo
// => false

// Test String respondsTo:
"hello" respondsTo: #size
// => true

"hello" respondsTo: #bar
// => false

// Test Boolean respondsTo:
true respondsTo: #not
// => true

false respondsTo: #'and:'
// => true

true respondsTo: #unknownMethod
// => false

// Test nil respondsTo:
nil respondsTo: #isNil
// => true

nil respondsTo: #notAMethod
// => false

// Test Block respondsTo:
[1] respondsTo: #value
// => true

[1] respondsTo: #invalidMethod
// => false

// Test Float respondsTo: (BT-277 - newly implemented)
3.14 respondsTo: #'+'
// => true

3.14 respondsTo: #'-'
// => true

3.14 respondsTo: #class
// => true

3.14 respondsTo: #asString
// => true

3.14 respondsTo: #abs
// => true

3.14 respondsTo: #nonExistent
// => false
