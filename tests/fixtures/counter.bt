// Simple counter actor for runtime testing.
// This is compiled to real BEAM bytecode and used by beamtalk_codegen_simulation_tests.erl
// to test the actual compiler output, not manually constructed state.

value := 0.

increment := [ self.value := self.value + 1. ^self.value ].

decrement := [ self.value := self.value - 1. ^self.value ].

getValue := [ ^self.value ].
