// E2E tests for list literal syntax #(1, 2, 3) (ADR 0012, BT-402)

// ===========================================================================
// EMPTY LIST
// ===========================================================================

// Empty list (displays as [] which is also empty charlist in Erlang)
#()
// => _

#() size
// => 0

#() isEmpty
// => true

// ===========================================================================
// SINGLE ELEMENT LIST
// ===========================================================================

#(256)
// => [256]

#(256) size
// => 1

#(256) isEmpty
// => false

// ===========================================================================
// MULTIPLE ELEMENT LIST
// ===========================================================================

#(1, 2, 3)
// => [1,2,3]

#(1, 2, 3) size
// => 3

// ===========================================================================
// NESTED LISTS
// ===========================================================================

#(#(1, 2), #(3, 4))
// => [[1,2],[3,4]]

// ===========================================================================
// LIST METHODS
// ===========================================================================

#(1, 2, 3) first
// => 1

#(1, 2, 3) rest
// => [2,3]

// ===========================================================================
// TRAILING COMMA
// ===========================================================================

#(10, 20, 30,)
// => [10,20,30]

// ===========================================================================
// LIST WITH EXPRESSIONS (parenthesized for binary ops)
// ===========================================================================

#((1 + 2), (3 * 4))
// => [3,12]
