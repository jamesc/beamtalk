// ProtoObject behavior tests - the root of the class hierarchy
// Tests class reflection, identity, and perform: dispatch

// ===========================================================================
// CLASS REFLECTION
// ===========================================================================

42 class
// => Integer

"hello" class
// => String

true class
// => True

false class
// => False

nil class
// => UndefinedObject

// ===========================================================================
// IDENTITY COMPARISON (==, ~=)
// ===========================================================================

42 == 42
// => true

42 ~= 43
// => true

nil == nil
// => true

nil == false
// => false

nil ~= false
// => true

nil ~= nil
// => false

// ===========================================================================
// PERFORM:WITHARGUMENTS: - dynamic dispatch
// ===========================================================================

42 perform: #+ withArguments: #(3)
// => 45

42 perform: #asString withArguments: #()
// => 42

"hello" perform: #++ withArguments: #(" world")
// => hello world
