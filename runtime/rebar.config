{erl_opts, [debug_info]}.

{deps, [
    {jsx, "~> 3.0"}
]}.

{profiles, [
    {test, [
        {erl_opts, [debug_info]},
        {eunit_opts, [
            verbose,
            {sys_config, ["test/sys.config"]}
        ]}
    ]}
]}.

%% Compile test fixtures before running tests
{pre_hooks, [
    {eunit, "bash -c './test_fixtures/compile.sh'"}
]}.

{eunit_opts, [verbose]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{plugins, [
    covertool
]}.
