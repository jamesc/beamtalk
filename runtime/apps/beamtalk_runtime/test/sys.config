[
    {kernel, [
        %% Configure logger to suppress debug/info/warning logs during tests
        %% Only show errors in test output for clean test runs
        {logger_level, error},
        {logger, [
            {handler, default, logger_std_h, #{
                level => error,
                formatter => {logger_formatter, #{
                    single_line => true,
                    template => [msg]
                }}
            }}
        ]}
    ]}
].
