%% System configuration for Beamtalk runtime
%%
%% This file is used when creating OTP releases. For development,
%% configuration is typically set via environment variables or
%% application:set_env/3.
%%
%% See: https://www.erlang.org/doc/man/config

[
    {beamtalk_runtime, [
        %% Port for REPL backend TCP server
        %% Default: 9000
        %% Can be overridden by:
        %% - CLI flag: beamtalk repl --port 9001
        %% - Environment variable: BEAMTALK_REPL_PORT
        {repl_port, 9000},

        %% Node name for Erlang distribution
        %% Default: beamtalk@localhost
        %% Can be overridden by:
        %% - CLI flag: beamtalk repl --node beamtalk_dev@localhost
        %% - Environment variable: BEAMTALK_NODE_NAME
        {node_name, 'beamtalk@localhost'}
    ]}
].
