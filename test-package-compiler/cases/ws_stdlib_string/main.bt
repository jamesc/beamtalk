// Test string operations

// String literals
greeting := "Hello"
name := "World"

// Concatenation
message := greeting ++ ", " ++ name ++ "!"

// String length
len := greeting length

// String comparison
isEqual := "hello" =:= "hello"
isLess := "apple" < "banana"

// String transformation
upper := greeting uppercase
lower := upper lowercase

// String testing
isEmpty := "" isEmpty
hasContent := message isNotEmpty

// String searching
found := message includes: "World"
starts := message startsWith: "Hello"
