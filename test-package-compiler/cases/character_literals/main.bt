// Test character literal codegen - $a compiles to integer codepoint

// ===== Basic Character Literals =====
letterA := $A
letterZ := $z
digit := $0

// ===== Character Comparison =====
isEqual := $A = $A
isLess := $A < $Z

// ===== Character Conversion =====
asInt := $A asInteger
asStr := $A asString

// ===== Escape Sequences =====
newline := $\n
tab := $\t
