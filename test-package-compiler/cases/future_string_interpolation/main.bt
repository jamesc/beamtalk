// Test string interpolation compilation (ADR 0023 Phase 3)

// Simple variable interpolation
name := "Alice"
greeting := "Hello, {name}!"

// Expression interpolation
age := 25
message := "You are {age + 5} years old in 5 years"

// Multiple interpolations in one string
firstName := "Bob"
lastName := "Smith"
fullName := "Name: {firstName} {lastName}"

// Escape sequences in interpolated strings
escaped := "Literal braces: \{ and \}, variable: {name}"

// Unicode in interpolated strings
emojiVar := "ðŸŽ‰"
withEmoji := "Celebration: {emojiVar} {name}!"

// Integer printString conversion
count := 10
summary := "Total: {count * 2}"

// Adjacent interpolations
adjacent := "{firstName}{lastName}"

// Only interpolation (no literal segments)
bare := "{name}"

// Plain string (no interpolation, zero overhead)
plain := "Hello, World!"
