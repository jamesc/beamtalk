// Simple whileTrue test with local variable mutation

test := [
    count := 0.
    [count < 3] whileTrue: [count := count + 1].
    ^count
].

// Test without module-level field
testLocal := [
    x := 0.
    [x < 5] whileTrue: [x := x + 1].
    ^x
].
