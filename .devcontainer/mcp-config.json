{
  "mcpServers": {
    "linear": {
      "type": "stdio",
      "command": "npx",
      "tools": [
        "*"
      ],
      "args": [
        "-y",
        "github:obra/streamlinear"
      ],
      "env": {
        "LINEAR_API_TOKEN": "${LINEAR_API_TOKEN}"
      }
    },
    "beamtalk": {
      "type": "stdio",
      "command": "./target/debug/beamtalk-mcp",
      "tools": [
        "*"
      ]
    }
  }
}
