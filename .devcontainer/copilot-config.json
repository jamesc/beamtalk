{
  "banner": "never",
  "render_markdown": true,
  "theme": "auto",
  "model": "claude-opus-4.6",
  "trusted_folders": ["${containerWorkspaceFolder}"],
  "allowed_urls": [
    "https://api.github.com",
    "https://docs.github.com",
    "https://docs.rs",
    "https://crates.io",
    "https://erlang.org",
    "https://www.erlang.org"
  ],
  "experimental": true,
  "log_level": "info",
  "default_permissions": {
    "tools": "allow",
    "paths": "allow",
    "urls": "allow"
  }
}
